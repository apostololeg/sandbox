$tablet = 500px
$desktop = 1200px

$indent_s = 10px
$indent_m = 20px
$indent_l = 30px

$accentColor = rgba(0,0,0,.9)
$accentColorLight = rgba(0,0,0,.05)

$decentColor = rgba(255,255,255,.9)
$decentColorLight = rgba(255,255,255,.5)

$activeColor = #ffd37e
$activeColorLight = rgba(255, 213, 46, .4)

$overlayColor = rgba(239, 239, 239, .96)
$linkColor = #3089fe

borderRadius(mod = 1)
  border-radius mod * 4px

controlBorder(color)
  box-shadow inset 0 0 0 2px color

postStyles()
  & ul,
  & ol
    padding-left $indent_l

  & img
    position relative
    display inline-block
    min-height 100px
    min-width 200px
    max-width 100%
    max-height 50vh
    border-radius 6px
    background-color $accentColorLight
    overflow hidden
