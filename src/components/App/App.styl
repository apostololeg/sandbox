@import '~theme'

.root
  height calc(100 * var(--vh))

.content
  flex-grow 1
  overflow-y auto

  &::before
    display block
    content ''
    height 70px
    flex-shrink 0

.contentCentered
  display flex
  align-items center
  justify-content center

* strong
  text-shadow 0 0 1px var(--accent-color)
