@import '~theme';

.root
  display flex
  align-items center

.user
  display flex
  align-items center

.userName
  @media(max-width: $tablet)
    display none

.avatar
  height 30px
  width @height
  background no-repeat center;
  margin-left var(--indent-s)

.menu
  justify-content flex-end
  padding var(--indent-s)
