@import '~theme'

.root
  position relative
  overflow hidden

.label
  display flex
  align-items center
  position absolute
  height 100%

  .size-s &
    padding 0 calc(var(--indent-s) / 2)
  .size-m &
    padding 0 calc(var(--indent-m) / 2)
  .size-l &
    padding 0 calc(var(--indent-l) / 2)

.input label
  cursor pointer

.control
  opacity 0
  position relative
  right -100%

.progress
  z-index -1
  position absolute
  top 0
  left -100%
  height 100%
  width 100%
  borderRadius()

  opacity .6
  background-color var(--active-color)
  transition all .2s ease-out
  pointer-events none

.success
  opacity 1

.error
  background-color $errorColor
  opacity 1
