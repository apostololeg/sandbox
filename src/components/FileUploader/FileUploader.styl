@import '~theme'

.root
  position relative
  overflow hidden

.progress
  z-index -1
  position absolute
  top 0
  left -100%
  height 100%
  width 100%
  borderRadius()

  opacity .6
  background-color var(--active-color)
  transition all .2s ease-out
  pointer-events none

.success
  opacity 1

.error
  background-color $errorColor
  opacity 1
