@import '~theme/theme.styl';

.root
  position relative
  margin 20px 0
  border 1px solid $accentColorLight
  border-radius 6px

.editor
  overflow-y auto
  padding 10px

  & div:nth-child(1) // .ql-editor
    padding-bottom 30px

  & div:nth-child(2) // .ql-clipboard
    display none

  & img
    imgBox()
