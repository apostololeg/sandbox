@import '~theme';

.root
  position relative
  margin 20px 0
  border 1px solid var(--accent-color-alpha-50)
  border-radius 6px

.editor
  overflow-y auto
  padding 0 10px 10px
  postStyles()

  & div:nth-child(1) // .ql-editor
    flex-grow 1
    padding-bottom 30px

  & div:nth-child(2) // .ql-clipboard
    display none
