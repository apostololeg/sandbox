@import '~theme/theme.styl'

.root
  position relative
  color #3089fe
  text-decoration none
  display inline-block
  padding 5px
  outline none
  transition color .1s ease-out

  &.exact
    color #333

  &:after
    content ''
    position absolute
    bottom 0
    left 5px
    right 5px
    height 2px
    background-color $activeColor
    transform scale(0)
    transition transform .1s ease-out

  &:hover
  &:active
  &:focus
    color $activeColor

    &::selection
      color $accentColor

    &:after
      transform scale(1)
