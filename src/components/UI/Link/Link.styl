@import '~theme/theme.styl'

.root
  position relative
  display inline-block
  padding 5px

  white-space nowrap
  color $linkColor
  text-decoration none

  outline none
  transition color .1s ease-out

  &:before
    content ''
    position absolute
    bottom 0
    left 5px
    right 5px
    height 2px
    background-color $activeColor
    transform scale(0)
    transition transform .1s ease-out
    pointer-events none

  &.exact
    color #333

  &.external:before
    background-color $accentColor

  &:hover
  &:active
  &:focus
    color $activeColor

    &.external
      color $accentColor

    &::selection
      color $accentColor

    &:before
      transform scale(1)

&.externalIcon
  height 1em
  width 1em
  display inline-block
  margin-left 3px
  margin-bottom -2px
