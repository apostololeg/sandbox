@import '~theme/theme.styl';

$width = 300px
$height = 80px
$duration = 200ms

gradient(color)
  background-image linear-gradient(to right, color 0%, transparent 40%)

.root
  z-index 10
  position absolute
  top $indent_s
  left 100%
  bottom $indent_s
  max-width 100%

.icon
  height 50px
  width 50px
  background no-repeat center
  margin-right $indent_s
  fill #d5d5d5

.item
  position relative
  right $indent_s
  height 0
  width $width
  margin-left -($width)
  transform translateX(110%)
  transform translate3d(110%, 0, 0)
  transition all $duration ease-out

  & + &
    margin-top $indent_s

  &_type
    &_error .itemInner
      gradient(rgba(255, 0, 0, .44))
    &_success .itemInner
      gradient(rgba(0, 255, 0, .44))
    &_info .itemInner
      gradient(rgba(0, 0, 255, .44))

  &_visible
    height $height
    transform translateX(0)
    box-shadow 0 10px 20px rgba(0,0,0,.3)

  &:hover .itemInner
    transform scale(1.01);

.itemInner
  display flex
  align-items center
  height $height
  padding $indent_s
  box-sizing border-box
  border-radius 5px
  background-color rgba(6,6,6,.95)
  color #d5d5d5
  transition transform $duration ease-out

.text
  display flex
  flex-direction column
  flex-grow 1

.title
  padding-right 50px

.content
  font-size 80%

.close
  position absolute
  right 5px
  top 5px
  height 20px
  width @height
  transition transform .1s ease-out
  fill #d5d5d5
  cursor pointer

  &:hover
    transform scale(1.1)
