@import '~theme/theme.styl'

checkmark(scale)
  // transform scale(scale) rotateZ(-45deg)
  transform-origin center

.root
  cursor pointer
  display inline-flex
  align-items center
  box-sizing border-box
  text-decoration none
  color inherit
  user-select none

.controlWrapper
  position relative
  width 30px
  height 30px

.control
  transition .1s ease-out
  transition-property background-color, color
  cursor pointer
  borderRadius(2)

.checkmark
  position absolute
  left 0px
  top 6px

  height 100%
  width 100%

  opacity 0
  transform scale(.8) rotateZ(-45deg)
  transform-origin center
  transition .1s ease-in
  transition-property transform, opacity
  pointer-events none

  &::before
  &::after
    content ''
    position absolute
    width 3px
    background-color $accentColor
    border-radius 2px

  &::before
    z-index 1
    left calc(50% - 2px)
    height 16px
    transform rotateZ(9deg)

  &::after
    top 3px
    left 21px
    height 20px
    transform rotateZ(-103deg)

  &.checked
    opacity 1

.label
  display flex
  align-items center
  align-self stretch
  padding-left $indent_s
  cursor pointer
