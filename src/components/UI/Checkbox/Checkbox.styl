@import '~theme/theme.styl'

.root
  cursor pointer
  display inline-flex
  align-items center
  justify-content center
  box-sizing border-box
  text-decoration none
  color inherit
  user-select none

.control
  cursor pointer
  width 30px
  transition .1s ease-out
  transition-property background-color, color

  &.checked
    background-color $accentColor
    color $decentColor

.label
  display flex
  align-items center
  align-self stretch
  padding-left $indent_s
  cursor pointer
