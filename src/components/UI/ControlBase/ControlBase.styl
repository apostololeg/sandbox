@import '~theme/theme.styl'

.root
  appearance none
  border-radius 3px
  outline none
  transition all .1s ease-out
  controlBorder()

  &:hover
  &[disabled]
    controlBorder(rgba(0,0,0,.5))

  &[disabled]
    color #808080
    cursor not-allowed

  &_size

    &_s
      height 30px
      max-height 30px
      padding 0 10px
      font-size 80% !important

    &_m
      height 40px
      max-height 40px
      padding 0 12px
      font-size 100% !important

    &_l
      height 50px
      max-height 50px
      padding 0 14px
      font-size 120% !important

  &:focus
    box-shadow inset 0 0 0 2px $activeColor
