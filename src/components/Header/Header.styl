@import '~theme'

.root
  z-index 10
  position absolute
  width 100%
  display flex
  align-items flex-start
  margin 0
  background-color var(--decent-color-alpha-900)
  background-image linear-gradient(to bottom, var(--accent-color-alpha-50), transparent)
  backdrop-filter blur(50px)

.title
  display flex
  align-items center
  flex-grow 1
  min-width 0
  padding 0 var(--indent-s)

  &:first-child
    padding-left 0
