$tablet = 500px
$desktop = 1200px

borderRadius(mod = 1)
  border-radius mod * 4px

postStyles()
  & ul,
  & ol
    padding-left var(--indent-l)

  & img
    position relative
    display inline-block
    min-height 100px
    min-width 200px
    max-width 100%
    max-height 50vh
    padding 0 1px // to see cursor caret
    borderRadius(2)
    background-color var(--accent-color-alpha-50)
    overflow hidden
