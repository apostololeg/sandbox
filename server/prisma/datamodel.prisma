enum Role {
  USER
  ADMIN
}

scalar DateTime

type User {
  id: ID! @id
  joinedAt: DateTime! @createdAt
  name: String
  email: String! @unique
  password: String!
  roles: [Role!]! @default(value: USER)
}

type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  author: User @relation(link: INLINE)
  title: String
  slug: String
  content: String
  tags: [String]
  published: Boolean
}
